<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_semibold"
                android:text="Recipient One"
                android:textColor="@color/txtPurple"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/rubik_regular"
                android:text="What types of disabilities your loved one has?"
                android:textColor="@color/txtDarkGray"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/txtDisabilities"
                style="@style/editTextBg"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableEnd="@drawable/spinner"
                android:hint="Select"
                android:imeOptions="actionNext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/rubik_regular"
                android:text="Describe about your loved one"
                android:textColor="@color/txtDarkGray"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/etDescription"
                style="@style/editTextBg"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="top"
                android:hint="Description"
                android:imeOptions="actionNext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/rubik_medium"
                android:text="Categories your loved one needs \nhelp with"
                android:textColor="@color/txtPurple"
                android:textSize="@dimen/_16sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

            <EditText
                android:id="@+id/etType"
                style="@style/editTextBg"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Type here"
                android:visibility="gone"
                android:imeOptions="actionDone"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/rubik_medium"
                android:text="Is your loved one Behavioral or Non-Behavioral?"
                android:textColor="@color/txtPurple"
                android:textSize="@dimen/_16sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtBehavioral"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/select_bg"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="Behavioral"
                    android:textColor="@color/txtOrange"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtNonBehavioral"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/unselect_bg"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="Non-behavioral"
                    android:textColor="@color/txtLightPurple"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/rubik_medium"
                android:text="Is your loved one Verbal or Non-verbal?"
                android:textColor="@color/txtPurple"
                android:textSize="@dimen/_16sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVerbal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/select_bg"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="Verbal"
                    android:textColor="@color/txtOrange"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtNonVerbal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/unselect_bg"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="Non-verbal"
                    android:textColor="@color/txtLightPurple"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/rubik_medium"
                android:text="Allergies"
                android:textColor="@color/txtPurple"
                android:textSize="@dimen/_16sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtYes"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/select_bg"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="Yes"
                    android:textColor="@color/txtOrange"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/unselect_bg"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="No"
                    android:textColor="@color/txtLightPurple"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <EditText
                android:id="@+id/etAllergies"
                style="@style/editTextBg"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Type in allergies"
                android:imeOptions="actionNext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/rubik_medium"
                android:text="Specialities"
                android:textColor="@color/txtPurple"
                android:textSize="@dimen/_16sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSpecialities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:overScrollMode="never" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#FFDEBA"
                android:layout_marginTop="@dimen/_10sdp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>