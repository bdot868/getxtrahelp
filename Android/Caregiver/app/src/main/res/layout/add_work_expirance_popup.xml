<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/closeImg"
        android:layout_marginTop="-15sp"
        android:background="@drawable/popup_bg"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rubik_regular"
            android:text="Work Experience"
            android:textColor="@color/txtPurple"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="Fill up the details of your previous employment here to help you with better jobs suggestions."
            android:textColor="@color/txtDarkGray"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/etWorkPlace"
            style="@style/editTextBg"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Work Place"
            android:imeOptions="actionNext"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtStartDate"
                style="@style/editTextBg"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_weight="1"
                android:hint="Start Date" />

            <TextView
                android:id="@+id/txtEndDate"
                style="@style/editTextBg"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="1"
                android:hint="End Date" />

        </LinearLayout>

        <EditText
            android:id="@+id/etReason"
            style="@style/editTextBg"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Reason for leaving"
            android:imeOptions="actionNext"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etDesc"
            style="@style/editTextBg"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="top"
            android:hint="Describe your work"
            android:imeOptions="actionDone" />

        <TextView
            android:id="@+id/txtAddExperience"
            style="@style/buttonTheme"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:clickable="true"
            android:text="Add Work Experience" />

    </LinearLayout>

    <ImageView
        android:id="@+id/closeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:src="@drawable/close_icon" />
</RelativeLayout>