<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    tools:context=".Ui.SubmitSuccessfullyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="6">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/xtrahelp_icon" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/rubik_semibold"
            android:gravity="center"
            android:text="Application \nSuccessfully \nSubmitted for Progress"
            android:textColor="@color/txtPurple"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_below="@+id/txtTitle"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:gravity="center"
            android:text="Application Submitted Successfully For Review Congratulations! Your application has been submitted successfully for review. You will be updated with the progress!"
            android:textColor="@color/txtGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:fontFamily="@font/rubik_semibold"
            android:gravity="center"
            android:text="Share App with \nfriends and caregivers"
            android:textColor="@color/txtPurple" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/twitterImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/twitter_blue" />

            <ImageView
                android:id="@+id/fbImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/fb_blue" />

            <ImageView
                android:id="@+id/instaImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/insta_blue" />

            <ImageView
                android:id="@+id/shareImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/share_blue" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtOk"
            style="@style/buttonTheme"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:clickable="true"
            android:text="Ok" />

    </LinearLayout>
    
</RelativeLayout>