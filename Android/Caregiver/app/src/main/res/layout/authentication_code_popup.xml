<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_18sdp"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_semibold"
                android:includeFontPadding="false"
                android:text="AUTHENTICATION CODE"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/txtOrange"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center"
                android:text="Please receive the code from your client by asking\n them directly Thank you."
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/_10sdp" />

            <com.app.xtrahelpcaregiver.CustomView.VerificationCodeView
                android:id="@+id/view_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                app:vcv_code_bg_focus="@drawable/edit_text_bg"
                app:vcv_code_bg_normal="@drawable/edit_text_bg"
                app:vcv_code_input_style="true"
                app:vcv_code_number="4"
                app:vcv_code_size="@dimen/_5sdp"
                app:vcv_code_width="@dimen/_42sdp" />

            <TextView
                android:id="@+id/txtStartAppointment"
                style="@style/buttonTheme"
                android:text="Start Job" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>