<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExtraHelpCaregiver" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/txtOrange</item>
        <item name="colorPrimaryVariant">@color/txtOrangeLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="colorSecondary">@color/txtPurple</item>-->
        <!--        <item name="colorSecondaryVariant">@color/txtBlue</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/activity_bg</item>
    </style>

    <style name="buttonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_btn</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editTextBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textColor">@color/txtBlack</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="shapeRound">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="shapeSquare">
        <item name="cornerSize">12%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="shapeSquare8">
        <item name="cornerSize">8%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CustomRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_big</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>

    <style name="CustomRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_small</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="Theme.ExtraHelpCaregiver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dateWeek">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@drawable/calendar_date_text_color</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="dateHeader">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@drawable/calendar_date_text_color</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/MyTextAppearance</item>
        <item name="android:textAppearanceMedium">@style/MyTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/MyTextAppearance</item>
        <item name="android:textAppearanceButton">@style/MyTextAppearance</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Theme.ExtraHelpCaregiver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExtraHelpCaregiver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="popup_window_animation_phone">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.DarkMode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/txtOrange</item>
        <item name="colorPrimaryVariant">@color/txtOrangeLight</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/activity_bg</item>
    </style>

</resources>